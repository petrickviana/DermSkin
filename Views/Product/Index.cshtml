@using System.Globalization;
@model IEnumerable<DermSkin.Models.ProductModel>

@{
    ViewData["Title"] = "Products";
   
}

<h1>Products list</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="fa fa-plus"></i> New Product</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                Total
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                R$@Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
                <td>
                    R$@item.Total.ToString("F2", CultureInfo.InvariantCulture)
                </td>
            <td>
                 <a asp-action="Details" asp-route-id="@item.Id"><span class="material-symbols-outlined">info</span></a>
                 <a asp-action="Edit" asp-route-id="@item.Id"><span class="material-symbols-outlined">edit_document</span></a>
                 <a asp-action="Delete" asp-route-id="@item.Id"><span class="material-symbols-outlined">delete</span></a>
            </td>
        </tr>
}
    </tbody>
</table>
    